<%= form_for(@monitored_period) do |f| %>
    <% if @monitored_period.errors.any? %>
        <div data-alert class="alert-box warning round" id="error_explanation">
          <h2><%= pluralize(@monitored_period.errors.count, "error") %> prohibited this permission_group from being saved:</h2>
          <ul>
            <% @monitored_period.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
          <a href="#" class="close">&times;</a>
        </div>
    <% end %>

    <div class="row">
      <div class="large-12 columns">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="row">
      <div class="large-4 columns">
        <%= f.label :start_date %>
        <%= f.datetime_local_field :start_date %>
      </div>
      <div class="large-4 columns">
        <%= f.label :end_date %>
        <%= f.datetime_local_field :end_date %>
      </div>
      <div class="large-4 columns">
        <%= f.label :collaborative_weighting %>
        <%= f.text_field :collaborative_weighting %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns"><%= f.submit :class => 'button tiny' %></div>
    </div>
<% end %>