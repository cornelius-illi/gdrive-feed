<%= form_for(@period_group) do |f| %>
    <% if @period_group.errors.any? %>
        <div data-alert class="alert-box warning round" id="error_explanation">
          <h2><%= pluralize(@period_group.errors.count, "error") %> prohibited this permission_group from being saved:</h2>
          <ul>
            <% @period_group.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
          <a href="#" class="close">&times;</a>
        </div>
    <% end %>

    <div class="row">
      <div class="large-12 columns">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <%= f.label :logo_class %>
        <%= f.text_field :logo_class %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <%= f.label :monitored_periods %>
        <%= f.collection_select :monitored_period_ids, @monitored_periods, :id, :name, {}, { :size=> @monitored_periods.length, :multiple => true} %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns"><%= f.submit :class => 'button tiny' %></div>
    </div>
<% end %>