<% content_for :title, 'List of Period Groups' %>
<h2>Period Groups</h2>

<%= link_to "Create new", new_period_group_path, :class => 'button tiny' %>

<% unless @period_groups.blank? %>
    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      </thead>
      <tbody>
      <% @period_groups.each do |pg| %>
          <tr>
            <td><%= pg.name %> (<%= pg.monitored_periods.length %>)</td>
            <td><%= link_to '', edit_period_group_path(pg), :class => 'fi-pencil' %></td>
            <td><%= button_to 'x', pg, :method=>:delete, :class=> 'button alert tiny delete' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <p><i>There are no period-groups available, yet. Go create one!</i></p>
<% end %>

<%= link_to "Create new", new_period_group_path, :class => 'button tiny' %>