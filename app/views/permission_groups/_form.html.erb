<%= form_for [@monitored_resource, @permission_group] do |f| %>
    <% if @permission_group.errors.any? %>
        <div data-alert class="alert-box warning round" id="error_explanation">
          <h2><%= pluralize(@monitored_period.errors.count, "error") %> prohibited this permission_group from being saved:</h2>
          <ul>
            <% @permission_group.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
          <a href="#" class="close">&times;</a>
        </div>
    <% end %>

    <%= f.hidden_field :monitored_resource_id %>
    <div class="row">
      <div class="large-12 columns">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
          <%= f.label :permissions %>
          <%= f.collection_select :permission_ids, @monitored_resource.permissions, :id, :title_usage, {}, { :size=> @monitored_resource.permissions.length, :multiple => true} %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns"><%= f.submit :class => 'button tiny' %></div>
    </div>
<% end %>